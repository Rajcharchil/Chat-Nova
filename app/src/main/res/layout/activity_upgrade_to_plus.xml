<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkblue1"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btnback"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:contentDescription="Back"
            android:layout_marginBottom="16dp" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ChatNova Plus"
            android:textSize="24sp"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Access our most powerful model and advanced features"
            android:textSize="16sp"
            android:paddingStart="10dp"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp" />

        <!-- Features List -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingTop="25dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\u2713 Everything in Free"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginBottom="22dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\u2713 Extended limits on messaging, file uploads, \n     advanced data analysis,and image \n     generation"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginBottom="22dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\u2713 Access to advanced voice and video inputs"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginBottom="22dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\u2713 Opportunities to test new features"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginBottom="22dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\u2713 Create and use projects and custom Nova"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginBottom="22dp" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\u2713 Advanced AI responses and image \n     generation"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginBottom="22dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\u2713 Voice and video chat capabilities"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginBottom="22dp" />
        </LinearLayout>

        <!-- Restore Subscription -->
        <Button
            android:id="@+id/btnRestore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Restore subscription"
            android:background="@android:color/transparent"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:layout_marginHorizontal="28dp"
            android:layout_marginVertical="12dp"
            android:padding="10dp"
            android:backgroundTint="@android:color/transparent"
            android:foreground="?android:attr/selectableItemBackground" />


        <!-- Subscribe Button -->
        <Button
            android:id="@+id/btnSubscribe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subscribe"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginHorizontal="28dp"
            android:layout_marginVertical="12dp" />

        <!-- Pricing Info -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auto-renews for â‚¹1,950.00/month until canceled"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_margin="12dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</ScrollView>
